server {
    listen       {{ nginx_port }};
    server_name  {{ nginx_server_name }};

    root         {{ nginx_root }};
    index        {{ nginx_index }};

    access_log  /var/log/nginx/host.access.log;

    location / {
        try_files $uri $uri/ =404;
    }

    error_page 404 /404.html;
    location = /404.html {
    }

    error_page 500 502 503 504 /50x.html;
    location = /50x.html {
    }
}
